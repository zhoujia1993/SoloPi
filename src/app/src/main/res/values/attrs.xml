<resources>
    <declare-styleable name="TextSpinner">
        <attr name="name" format="string|reference" />
        <attr name="textAppearance" format="reference" />
        <attr name="entries" format="reference" />
    </declare-styleable>

    <declare-styleable name="CheckableRelativeLayout">
        <attr name="selectColor" format="color" />
    </declare-styleable>

    <declare-styleable name="ReverseImageView">
        <attr name="maskImg" format="reference" />
        <attr name="targetImg" format="reference" />
    </declare-styleable>

    <declare-styleable name="CaseStepStatusView" >
        <attr name="css_backgroundColor" format="color" />
        <attr name="css_lineColor" format="color" />
        <attr name="css_textSize" format="dimension" />
        <attr name="css_textWidth" format="dimension" />
        <attr name="css_lineSpace" format="dimension" />
        <attr name="css_lineWidth" format="dimension" />
        <attr name="css_triangleWidth" format="dimension" />
    </declare-styleable>

    <declare-styleable name="GesturePadView" >
        <attr name="gpv_backgroundRes" format="reference" />
        <attr name="gpv_lineColor" format="color" />
        <attr name="gpv_lineWidth" format="dimension" />
        <attr name="gpv_pointRadius" format="dimension" />
        <attr name="gpv_clearBtn" format="reference" />
        <attr name="gpv_clearBtnSize" format="dimension" />
        <attr name="gpv_targetImgRes" format="reference" />
        <attr name="gpv_padding" format="dimension" />
        <attr name="gpv_gestureFilter" format="integer" />
    </declare-styleable>
</resources>